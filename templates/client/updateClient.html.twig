<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px / 1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    form {

        margin-top: 100px;
    }
    button[type="submit"] {
        padding: 10px;
        margin-top: 50px;
        width: 100;
    }
</style>

<div class="example-wrapper">
    <h2>Modifier un client</h2>
    {{ form_start(form) }}

    {{ form_row(form.cni) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.telephone) }}
